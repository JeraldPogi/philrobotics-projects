#include <servo.h>

void init()
{
	setupServoDef(SERV0,SERVO,-90);
}

void program()
{
	signed char i;
	
	/* increment angle */
	for(i=-90;i<=90;i++)
	{
		setServoAngle(SERV0,i);
		delayMs(5);
	}
	
	delayMs(200);
	delayMs(200);
	
	/* decrement angle */
	for(i=90;i>=-90;i--)
	{
		setServoAngle(SERV0,i);
		delayMs(5);
	}
	
	delayMs(200);
	delayMs(200);
}

