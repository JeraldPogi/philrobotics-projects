/* Ramp Function Generator */
static volatile uint16_t LoopTimer;

void init()
{
	LoopTimer = getMs();
}

void program()
{
	static uint16_t ADCOutValue = 0;
	
	/* New Value Every 1mS */
	if(getElapsedMs(LoopTimer)>= 1)
	{
		LoopTimer = getMs();
		setDAC(DAC0, ADCOutValue);
		
		if(ADCOutValue >= 1023)
		{	
			ADCOutValue = 0;
		}	
		else
		{
			ADCOutValue+=10;
		}
	}
}

